{
  "name": "super-tic-tac-toe",
  "version": "1.0.0",
  "description": "Super Tic Tac Toe: a 9x9 revamp of Tic Tac Toe with added mechanics to implement more strategy",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/server/server.js --delay 5000\" \"npm run start-webpack\"",
    "start-server": "tsc && npm run serve",
    "start-webpack": "webpack-dev-server --config ./webpack.config.js --mode development",
    "serve": "node dist/server/server.js",
    "test": "jest --forceExit",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/scss/ --output dist/public/css/",
    "watch-sass": "node-sass -w src/public/scss/ --output dist/public/css/",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "private": true,
  "dependencies": {
    "@types/socket.io": "^1.4.36",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "socket.io": "^2.1.1",
    "svg.js": "^2.6.4",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.16.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.6",
    "concurrently": "^3.6.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "jest": "^23.4.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mchach24/Super-Tic-Tac-Toe.git"
  },
  "author": "Matthew Hachten",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mchach24/Super-Tic-Tac-Toe/issues"
  },
  "homepage": "https://github.com/mchach24/Super-Tic-Tac-Toe#readme"
}
