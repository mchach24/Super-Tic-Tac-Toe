{
  "compilerOptions": {
    "module": "commonjs",                     
    "target": "es6",                          
    "sourceMap": true,                        
    "outDir": "dist",
    "strict": true,                           
    "noImplicitAny": true,
    "moduleResolution": "node",               
    "baseUrl": ".",                       
    "paths": {
      "*": [
        "node_modules*",
        "srctypes*"
      ],      
      "@client/*":  ["src/client/*"],
      "@game/*":    ["src/client/game/*"],

      "@server/*":  ["src/server/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "src/server/**/*",
  ]
}