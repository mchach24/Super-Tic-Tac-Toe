{
  "compilerOptions": {
    "module":           "commonjs",
    "moduleResolution": "node",
    "lib": [
        "es7", "dom", "esnext.asynciterable"
    ],
    "target":           "ES6",
    "sourceMap":        true,
    "baseUrl":          ".",
    "outDir":           "dist/",
    "strict":           true,
    "noImplicitReturns":true,
    "noImplicitThis":   true,
    "removeComments":   true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@client/*":  ["client/*"],

      "@app-root/*": ["/*"],
    },
  },
  "include": [
    "src/server-ts"
  ],
}
