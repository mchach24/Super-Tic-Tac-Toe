{
  "compilerOptions": {
    "module":           "commonjs",
    "moduleResolution": "node",
    "target":           "es6",
    "sourceMap":        true,
    "baseUrl":          ".",
    "outDir":           "dist/client",
    "strict":           true,
    "noImplicitAny":    false,
    "removeComments":   true,
    "paths": {

      "@modules/*": ["modules/*"],

      "@web/*":     ["modules/web/*"],
      "@game/*":    ["modules/game/*"],
      "@chat/*":    ["modules/chat/*"],
      
      "@primitives/*": ["primitives/*"],

      "@assets/*":    ["assets/*"],

      "@lib/*":       ["lib/*"],
      "@globals/*":   ["lib/globals/*"],
      "@util/*":      ["lib/util/*"],

    },
    "jsx": "react",
    "esModuleInterop": true
  },
}
