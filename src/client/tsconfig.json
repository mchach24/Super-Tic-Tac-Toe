{
  "compilerOptions": {
    "module":           "commonjs",
    "moduleResolution": "node",
    "target":           "es6",
    "sourceMap":        true,
    "baseUrl":          ".",
    "outDir":           "dist/server",
    "strict":           true,
    "noImplicitAny":    false,
    "removeComments":   true,
    "paths": {

      "@modules/*": ["modules/*"],

      "@web/*":     ["modules/web/*"],
      "@game/*":    ["modules/game/*"],
      "@chat/*":    ["modules/chat/*"],

    },
    "jsx": "react",
    "esModuleInterop": true
  },
}
